doctype html
html
  head
    meta(charset="utf-8")
    meta(content="IE=edge" http-equiv="X-UA-Compatible")
    meta(content="width=device-width, initial-scale=1.0, user-scalable=no" name="viewport")

    block title
      title Key Maps

    if assets['application.css']
      link(rel="stylesheet" href="/" + assets['application.css'].path)

    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/loaders.css/0.1.2/loaders.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Assistant:200,300,400,600,700")

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/favicons/manifest.json">
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#457eba">
    <link rel="shortcut icon" href="/favicons/favicon.ico">
    <meta name="msapplication-config" content="/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">


  body.loader-overlay--show.loader-overlay--fadein

    #react-mount


    .loader-overlay
      .loader
        .loader-inner.ball-scale-ripple-multiple
          div
          div
          div


    block scripts
      script(src="/" + assets['application.js'].path)
