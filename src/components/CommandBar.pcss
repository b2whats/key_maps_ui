@import "../lib/variables";


.CommandBar {
  border: 2px solid color($base03 a(.1));
  border-radius: $border-radius;
  font-size: .95rem;
  font-weight: 600;
  margin-bottom: grid(2);
  padding: grid(1.5);
}


.action {
  color: color($base03 a(.875));
  cursor: pointer;

  & > span {
    align-items: center;
    display: inline-flex;
  }

  & svg {
    margin-right: grid(.5);
    transform: translateY(1px);
  }
}
