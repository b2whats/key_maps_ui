@import "../lib/variables";


.CommandBar {
  border: 2px solid color($base03 a(.1));
  border-radius: $border-radius;
  font-size: .875rem;
  font-weight: 600;
  margin-bottom: grid(2);
  padding: grid(1.5);
}


.action {
  color: color($base03 a(.875));
  cursor: pointer;
  margin-right: grid(3);

  &:last-child {
    margin-right: 0;
  }

  & > span {
    align-items: center;
    display: inline-flex;
  }

  & svg {
    height: .9em;
    margin-right: grid(.5);
  }
}
